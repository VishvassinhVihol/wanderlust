<!-- for ejsMate -->
<%- layout("/layouts/boilerplate.ejs") %>
<!-- flash message to show that new list is created -->

<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
    }
    .filter{
        margin-top: 2rem;
        margin-bottom: 1.5rem;
        margin-right: 3rem;
        text-align: center;
        cursor: pointer;
        opacity: 0.7;
    }
    .filter i{
       font-size: 2rem;
       color: black;
    }
    .filter p{
       font-size: 0.8rem;
       
    }
    .filter:hover{
        opacity: 1;
    }

    .toggle-txt{
        display: none;
    }
    .tax-toggle{
        border: 2px solid gray;
        height: 3rem;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        margin-left: 3rem;
        padding: 1rem;
        margin-top: 1.8rem;
    }
</style>

<body>
    <!-- <h2>All Listings</h2> -->
    
    <!-- <form action="/listings/new">
        <button>Create a New Post</button>
    </form> -->
    <div id="filters">
    
        <div class="filter">
            <i class="fa-solid fa-fire" ></i>
            <p>Trending</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <i class="fa-sharp fa-solid fa-cow" ></i>
            <p>Farms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain" ></i>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-tree"></i>
            <p>Treehouse</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach" ></i>
            <p>Beaches</p>
        </div>
       
        <div class="filter">
            <i class="fa-brands fa-fort-awesome" ></i>
            <p>Castles</p>
        </div>
        <div class="filter">
            <i class="fa-regular fa-snowflake" style="color: black;"></i>
            <p>Cold Places</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-cloud-rain"></i>
            <p>Rainy Places</p>
        </div>
        
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-xs-1 row-cols-sm-1">
        <%for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
                    <div class="card-img-overlay">agcd</div><!--from bootstrap: to write text on image-->
                    <div class="card-body">
                      <p class="card-text">
                        <b><%=listing.title%></b> <br>
                        &#8377; <%=listing.price.toLocaleString("en-IN") %> / night <i class="toggle-txt">&nbsp; &nbsp;  +18% GST</i>
                      </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
    <!-- <ul> -->
        <!-- <%for(let listing of allListings){%> -->
            <!-- <li><a href="/listings/<%=listing._id%>"><%=listing.title%></a></li>by clicking on this user can see post in detail -->
        <!-- <%}%> -->
    <!-- </ul> -->
</body>

<script>
    let toggleSwitch = document.getElementById("flexSwitchCheckDefault")
    toggleSwitch.addEventListener('click',()=>{
        let toggleTxt = document.getElementsByClassName('toggle-txt')
        for(info of toggleTxt){
            if(info.style.display != 'inline'){
                info.style.display = 'inline'
            }
            else{
                info.style.display = 'none'
            }
        }
        
        
        
    })
</script>
